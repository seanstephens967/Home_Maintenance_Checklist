@model IEnumerable<HomeMaintenance.Models.Property.PropertyListItem>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PropertyID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyOwnerFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyOwnerLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyOwnerEmail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyOwnerFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyOwnerLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyOwnerEmail)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PropertyID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PropertyID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PropertyID }) |
                @Html.ActionLink("Open Projects", "GetActiveProjectByPropertyById", new { id = item.PropertyID }) |
                @Html.ActionLink("Closed Projects", "GetCompletedProjectByPropertyById", new { id = item.PropertyID })
            </td>
        </tr>
    }

</table>
